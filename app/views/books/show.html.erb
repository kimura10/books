<%= flash[:notice] %>

 <div class="container">
  <div class="row">
   <%= render 'users/user', user: @user,book: @booknew %>
    <div class="col-md-8 offset-md-1">
    <h2>Book</h2>
    <table class="table table-user-show">
     <tr>
      <td>
       <%= link_to user_path(@user) do %>
       <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg"%>
       <%= @user.name %>
       <% end %>
      </td>
      <td><%= link_to @book.title %></td>
      <td><%= @book.body %></td>
       <% if @book.user_id == current_user.id %>
        <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
        <td><%= link_to "Destroy", book_path(@book.id), method: :delete, data: {confirm: "本当に消しますか？"} %></td>
       <% end %>
     </tr>
    </table>
   </div>
 </div>
</div>
